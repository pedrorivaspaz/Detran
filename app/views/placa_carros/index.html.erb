<h1><%= PlacaCarro.model_name.human(count: @placa_carros.count) %></h1>
<table class="table table-hover">
  <thead>
    <tr>
      <th><%= @placa_carros.human_attribute_name(:Placa)%></th>
      <th><%= @placa_carros.human_attribute_name(:proprietario) %></th>
      <th><%= @placa_carros.human_attribute_name(:modelo) %></th>
      <th><%= @placa_carros.human_attribute_name(:ano) %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @placa_carros.each do |placa_carro| %>
      <tr>
        <td><%= placa_carro.placa %></td>
        <td><%= placa_carro.proprietario %></td>
        <td><%= placa_carro.modelo %></td>
        <td><%= placa_carro.ano %></td>
        <td><%= link_to t('links.Editar'), edit_placa_carro_path(placa_carro) %></td>
        <td><%= link_to t('links.Deletar'), placa_carro, method: :delete, data: { confirm: t('messages.confirm') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


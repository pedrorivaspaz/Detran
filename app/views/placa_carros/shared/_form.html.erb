<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header"><%= action_message %></h1>
    </div>
</div>

<div class="row">

    <% if @placa_carro.errors.any? %>
        <div class="alert alert-danger alert-dismissable">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
            
            <ul>
              <% @placa_carro.errors.full_messages.each do |message| %>
                <li> <%= message %> </li>
              <% end %>
            </ul>
        </div>
    <% end %>

    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <%= @placa_carro.model_name.human %>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-6">
                       <%= form_with(model: @placa_carro, local: true) do |form| %>
                        
                            <div class="form-group">
                                <%= form.label :placa %>
                                <%= form.text_field :placa, 
                                         class:"form-control", 
                                        placeholder: ('DDO-7233')  %>
                            </div>
                            
                            <div class="form-group">
                                <%= form.label :proprietario %>
                                <%= form.text_field :proprietario, 
                                         class:"form-control", 
                                         placeholder: ('Pedro Rivas Paz')  %>
                            </div>

                             <div class="form-group">
                                <%= form.label :modelo %>
                                <%= form.text_field :modelo, 
                                         class:"form-control", 
                                        placeholder: ('POLO')  %>
                            </div>
                            
                            <div class="form-group">
                                <%= form.label :ano %>
                                <%= form.text_field :ano, 
                                         class:"form-control", 
                                         placeholder: ('2022')  %>
                            </div>

                            <button type="submit" class="btn btn-default">
                              <%= t('button.save') %>
                            </button>
                        <% end %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>